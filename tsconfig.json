{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@contracts": ["./contract-types"],
      "@helpers/*": ["./helpers/*"]
    },
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection"
    ]
  },
  "include": [
    "hardhat.config.ts",
    "./scripts",
    "./helpers",
    "./deploy",
    "./tasks",
    "./test",
    "./typings/**/*.d.ts",
    "./contract-types/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
